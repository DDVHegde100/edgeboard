{
  "name": "edgeboard",
  "version": "0.1.0",
  "description": "A sleek, always-on-top macOS overlay designed for productivity enthusiasts",
  "main": "dist/main.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:ui\" \"npm run dev:native\"",
    "build": "npm run build:ui && npm run build:native",
    "build:ui": "webpack --mode production",
    "build:native": "make -C src/native",
    "dev:ui": "webpack serve --mode development --port 3000",
    "watch:ui": "webpack --mode development --watch",
    "watch:native": "make -C src/native watch",
    "dev:native": "make -C src/native all && ./build/native/EdgeBoard",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/ui --ext .ts,.tsx",
    "lint:fix": "eslint src/ui --ext .ts,.tsx --fix",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist build node_modules/.cache",
    "package": "npm run build && ./scripts/package.sh",
    "release": "npm run test && npm run build && ./scripts/release.sh"
  },
  "keywords": [
    "macos",
    "productivity",
    "overlay",
    "utilities",
    "glassmorphism"
  ],
  "author": "DDVHegde100",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "concurrently": "^8.2.0",
    "css-loader": "^6.8.0",
    "eslint": "^8.45.0",
    "eslint-plugin-react": "^7.32.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "html-webpack-plugin": "^5.5.0",
    "jest": "^29.6.0",
    "sass": "^1.64.0",
    "sass-loader": "^13.3.0",
    "style-loader": "^3.3.0",
    "ts-loader": "^9.4.0",
    "typescript": "^5.1.0",
    "webpack": "^5.88.0",
    "webpack-cli": "^5.1.0",
    "webpack-dev-server": "^5.2.2"
  },
  "dependencies": {
    "clsx": "^2.0.0",
    "framer-motion": "^10.12.0",
    "lucide-react": "^0.263.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/DDVHegde100/edgeboard.git"
  },
  "bugs": {
    "url": "https://github.com/DDVHegde100/edgeboard/issues"
  },
  "homepage": "https://github.com/DDVHegde100/edgeboard#readme"
}
